<%= react_component 'Words', { words: @words} %>

<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h1>Welcome to Word Counter</h1>
    </div>
    <div class="col-md-3"></div>
  </div>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <p>I will analyze any sentence you got!</p>
    </div>
    <div class="col-md-4"></div>
  </div>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <%= form_for [Word.new] do |f| %>
        <p><%= f.text_field :sentence %> <%= f.submit "Let's check it out!" %></p>
      <% end %>
    </div>
    <div class="col-md-4"></div>
  </div>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h3>Previous words:</h3>
    </div>
    <div class="col-md-4"></div>
  </div>
  <div class="previous-words-box">
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4">
        <% if Word.exists? %>
          <ul class="index-list">
          <% @words.each do |word| %>
           <a><li><%= link_to word.sentence, word %></li></p>
          <% end %>
          </ul>
        <% else %>
          <p>There are none.</p>
        <% end %>
      </div>
      <div class="col-md-4"></div>
    </div>
  </div>
</div>
